# EditorConfig is awesome: http://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
indent_style = space
indent_size = 4
charset = utf-8
trim_trailing_whitespace = true
end_of_line = lf
insert_final_newline = true

# Tab indentation (no size specified)
[Makefile]
indent_style = tab

[{*.c,*.cpp}]
indent_size = 2

[*.java]
indent_size = 4

[{*.scala,*.sbt}]
indent_size = 2

[*.py]
indent_size = 4

[*.php]
indent_size = 4

[*.rb]
indent_size = 2

[*.sh]
indent_size = 4

[*.pl]
indent_size = 4

[*.el]
indent_size = 2

[*.sql]
indent_size = 4

[*.html]
indent_size = 2

[*.css]
indent_size = 2

[*.scss]
indent_size = 2

# Indentation override for all JS under lib directory
[*.js]
indent_size = 2

[*.json]
indent_size = 2

[*.yml]
indent_size = 2

[composer.json]
indent_size = 4

[package.json]
indent_size = 2
